<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="220dp"
            android:minHeight="80dp"
            android:background="@drawable/background_item_player">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:text="NickName"
                    android:textColor="@color/white"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@id/first_image"
                    app:layout_constraintTop_toTopOf="parent"
                 />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/player_name"
                    android:textColor="#6C6B7E"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@id/first_image"
                    app:layout_constraintTop_toBottomOf="@id/nick"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/first_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/rectangle_5"
                    android:background="@drawable/round_image_item"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />



        </androidx.constraintlayout.widget.ConstraintLayout>



</layout>